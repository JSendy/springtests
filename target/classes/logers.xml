<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="consoleEventLogger" class="ConsoleEventLogger" />
    <bean id="filEventLogger" class="FileEventLogger" init-method="init">
        <constructor-arg value="target/events_log.txt"/>
    </bean>
    <bean id="cacheFilEventLogger" class="CacheFileEventLogger" destroy-method="destroy" parent="filEventLogger">
        <constructor-arg value="10"/>
    </bean>
    <bean id="combinedEventLogger" class="CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="filEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
    </beans>